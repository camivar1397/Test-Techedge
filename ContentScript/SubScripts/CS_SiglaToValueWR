//Retorna el valor de una sigla en la tabla de parametros WR JHMM 22/09/2020

//Parametros de entrada
def sigla = params.sigla
def tipo = params.tipo
def tabla = params.tabla

try{
    //Consultar en la tabla de parametros
    def query = """SELECT DescripcionLarga
                   FROM ${tabla}
                   WHERE Tipo = '${tipo}'
                   AND Sigla = '${sigla}'
                """
    
    def result = sql.runSQLFast(query, false, false, 0).rows.get(0)
    
    //Devolver el resultado
    return result.DescripcionLarga
    
}catch(e){
    return "Los parametros de entrada no son correctos ${e}"
}