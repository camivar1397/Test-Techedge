    <script>
        $(function () {
            $('.datetimepicker1').datetimepicker({
                format:'DD/MM/YYYY hh:mm A',
                locale: 'es'
            });
            
            setSelect([LL_REPTAG_$SL_DepDe /], "#depde-select")
            setSelect([LL_REPTAG_$SL_DepPara /], "#deppara-select")
            setSelect([LL_REPTAG_$SL_Origen /], "#origen-select")
            setSelect([LL_REPTAG_$SL_Estado /], "#estado-select")
            setSelect([LL_REPTAG_$SL_EstadoSede /], "#estadoSede-select")
            setSelect([LL_REPTAG_$SL_Empresa /], "#empresa-select")
            setSelect([LL_REPTAG_$SL_TipoComunicacion /], "#tipcom-select")
            setSelect([LL_REPTAG_$SL_CategoriaAsunto /], "#catasunto-select")
            setSelect([LL_REPTAG_$SL_DepTodos /], "#ccDep-select")
            setSelect([LL_REPTAG_$SL_Medio /], "#medio-select")
            setSelect([LL_REPTAG_$SL_TipoEnvio /], "#tipoenvio-select")
            setSelect([LL_REPTAG_$SL_RespPeticion /], "#peticion-select")
            
            setTimeout(() => {
                $('.select2').select2({
                    placeholder: 'Seleccione una opción...'
                });
                
                document.querySelector("#loadingindicator").style.display = "none"
                
                $(".popover-help").popover()
                
                let allItems = document.querySelectorAll(".all")
                let internaItems = document.querySelectorAll(".interna")
                let externaItems = document.querySelectorAll(".externa")
                let sedeItems = document.querySelectorAll(".sede")
                let extIntItems = document.querySelectorAll(".exint")
                let sedeIntItems = document.querySelectorAll(".sedeint")
                toggleItems(allItems, "none")
                toggleItems(internaItems, "none")
                toggleItems(externaItems, "none")
                toggleItems(sedeItems, "none")
                toggleItems(extIntItems, "none")
                toggleItems(sedeIntItems, "none")
            }, 3000);
        });
        
        function setSelect(wrID, object) {
            let wrUrl = "?func=ll&objId=" + wrID + "&objAction=RunReport";
            $.ajax({
                async: true,
                url: wrUrl,
                cache: false
            }).done(function (response) {
                $(object).html(response);
            })
        }
        
        function chooseUser( prefix, title, filter )
        {
            window.open( "/OTCS/llisapi.dll?func=user.SelectUserDlg&formname=ReportPrompts&fieldprefix=" + prefix + "&title=" + encodeURIComponent( title ) + filter + "&DisplayUserName", "", "height=340,width=800,scrollbars=yes,resizable=yes,menubar=no" );
        }
        
        function clearSelectedUser( label ) {
            document.getElementById( label + "_ID" ).value = "";
            document.getElementById( label + "_Name" ).value = "";
        }
        
        function runReport() {
            document.querySelector("#loadingindicator").style.display = "block"
            const reporteID = document.querySelector("#origen").value
            let origen = $("#origen").find(':selected').attr('data-otype');

            let fecha1 = moment(document.querySelector("#fecha1").value, "DD/MM/YYYY hh:mm A")
            let fecha2 = moment(document.querySelector("#fecha2").value, "DD/MM/YYYY hh:mm A")
            let selectoDe=obtenerMultiselect(document.querySelector("#depde").id)
            let selectoPara=obtenerMultiselect(document.querySelector("#deppara").id)
            let selectorTipo=obtenerMultiselect(document.querySelector("#tipoComunicacion").id)
            let tipocomunicado=selectorTipo.slice(0, -1)
            let selectorCategoria=obtenerMultiselect(document.querySelector("#categoriaAsunto").id)
            let categoriasunto=selectorCategoria.slice(0, -1)
            let selectoTotal=obtenerMultiselect(document.querySelector("#dependenciaTotal").id)
            let selectMedio=document.querySelector("#medio").value 
            let selectTipoEnvio=obtenerMultiselect(document.querySelector("#tipoenvio").id)
            let selectResPeticion=document.querySelector("#respeticion").value
            let radContingencia=document.querySelector("#radcontingencia").value
            URL = "?func=ll&objId=" + reporteID
            URL += "&objAction=RunReport&conHTML=0" 
            URL += "&radicado=" + document.querySelector("#radicado").value
            URL += "&fecha1=" + momentsToCSDate(fecha1) 
            URL += "&fecha2=" + momentsToCSDate(fecha2) 

            if(origen == "interna" || origen == "externa"){
                URL += "&usuariode=" + document.querySelector("#usuariode_ID").value
                URL += "&depde=" + selectoDe
            }else{
                URL += "&usuariode=" + document.querySelector("#nombrede").value
                URL += "&empresaRem=" + document.querySelector("#empresaRem").value
                
            }
            
            if (origen == "interna" || origen == "sede") {
                URL += "&usuariopara=" + document.querySelector("#usuariopara_ID").value 
                URL += "&deppara=" +  selectoPara
            } else {
                URL += "&usuariopara=" + document.querySelector("#nombrepara").value
                URL += "&empresa=" + document.querySelector("#empresa").value
            }

            if(origen == "sede"){
                URL += "&tipoComunicacion=" + tipocomunicado 
                URL += "&categoriaAsunto=" + categoriasunto
                URL += "&dependenciaTotal=" + selectoTotal
            }

            URL += "&asunto=" + document.querySelector("#asunto").value
            if(origen == "interna" || origen == "externa"){
                URL += "&estado=" + document.querySelector("#estado").value  
            }else{
                URL += "&estadoSede=" + document.querySelector("#estadoSede").value  
                
            }
            URL += "&medio=" + selectMedio 
            
            if (origen == "interna" || origen == "sede") {
                URL += "&tipoenvio=" + selectTipoEnvio
            }
            
            if(origen == "externa"){
                URL += "&respeticion=" + selectResPeticion
            }
            
            URL += "&radContingencia=" + radContingencia 
           
            URL += "&nexturl=[LL_REPTAG_NEXTURL /]"
            
            console.log(URL)
            window.location = URL
        }
        
        function setFilters() {
            let allItems = document.querySelectorAll(".all")
            let internaItems = document.querySelectorAll(".interna")
            let externaItems = document.querySelectorAll(".externa")
            let sedeItems = document.querySelectorAll(".sede")
            let extIntItems = document.querySelectorAll(".exint")
            let sedeIntItems = document.querySelectorAll(".sedeint")
            let origen = $("#origen").find(':selected').attr('data-otype');
            
            toggleItems(allItems, "block")
            if (origen == "externa") {
                toggleItems(externaItems, "block")
                toggleItems(internaItems, "none")
                toggleItems(sedeItems, "none")
                toggleItems(extIntItems, "block")
                toggleItems(sedeIntItems, "none")
            } else if (origen == "interna") {
                toggleItems(externaItems, "none")
                toggleItems(internaItems, "block")
                toggleItems(sedeItems, "none")
                toggleItems(extIntItems, "block")
                toggleItems(sedeIntItems, "block")
            } else if (origen == "sede") {
                toggleItems(externaItems, "none")
                toggleItems(internaItems, "none")
                toggleItems(sedeItems, "block")
                toggleItems(extIntItems, "none")
                toggleItems(sedeIntItems, "block")
            } else {
                toggleItems(externaItems, "none")
                toggleItems(internaItems, "none")
                toggleItems(sedeItems, "none")
                toggleItems(extIntItems, "none")
                toggleItems(sedeIntItems, "none")
                toggleItems(allItems, "none")
                
            }
        }
        
        function toggleItems(items, display) {
            for (let index = 0; index < items.length; index++) {
                items[index].style.display = display
            }
        }
        
        //D/2020/15/1:12:15:0
        function momentsToCSDate(mObj) {
            if (mObj._i != "") {
                let day = mObj.date()
                let month = mObj.month() + 1
                let year = mObj.year()
                let hours = mObj.hour()
                let minute = mObj.minute()
                let datepaila = "D/" + year + "/" + month + "/" + day + ":" + hours + ":" + minute + ":0"
                return datepaila
            }else{
                return ""
            }
        }
        
        function obtenerMultiselect(sel) 
        { 
            var selector=document.getElementById(sel); 
            var valores="";
            if(selector != ""){
                for (var i = 0; i < selector.options.length; i++) {
                    if(selector.options[i].selected ==true){ 
                        valores=valores+selector.options[i].value+","; 
                    }  
                } 
                return valores;
            }else{
                return "";
            }
        }
    </script>
