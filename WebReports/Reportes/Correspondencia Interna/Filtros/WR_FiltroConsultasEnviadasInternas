    <script>
    

        $(function () {
            $('.datetimepicker1').datetimepicker({
                format:'DD/MM/YYYY hh:mm A',
                locale: 'es'
            });
            
            setSelect([LL_REPTAG_$SWR_Estado /], "#estado-select")
            setSelect([LL_REPTAG_$SWR_DepGUsuario /], "#depgr-select")
            setSelect([LL_REPTAG_$SWR_DepGTodos /], "#depgd-select")
            setSelect([LL_REPTAG_$SWR_Medio /], "#medio-select")
            setTimeout(() => {
                $('.select2').select2({
                    placeholder: 'Seleccione una opción...'
                });
            document.querySelector("#loadingindicator").style.display = "none"
            $(".popover_help").popover()
            }, 3000);
        });
        
        function setSelect(wrID, object) {
            let wrUrl = "?func=ll&objId=" + wrID + "&objAction=RunReport";
            // Se ejecuta el WR
            $.ajax({
                async: true,
                url: wrUrl,
                cache: false
            }).done(function (response) {
                $(object).html(response);
            })
        }
        
        function chooseUser( prefix, title, filter )
        {
            window.open( "/OTCS/llisapi.dll?func=user.SelectUserDlg&formname=ReportPrompts&fieldprefix=" + prefix + "&title=" + encodeURIComponent( title ) + filter + "&DisplayUserName", "", "height=340,width=800,scrollbars=yes,resizable=yes,menubar=no" );
        }
        function clearSelectedUser( label ) {
            document.getElementById( label + "_ID" ).value = "";
            document.getElementById( label + "_Name" ).value = "";
        }
        
        function validarCampos() {
            document.querySelector("#errormessage").style.display = "none"
            //Constantes
            const TresMes = [LL_REPTAG_$maxMeses /] //max Meses
            
            //Variables
            let radicado = document.querySelector("#radicado").value
            let fechainicio = moment(document.querySelector("#fechinicio").value, "DD/MM/YYYY hh:mm A")
            let fechafin = moment(document.querySelector("#fechfin").value, "DD/MM/YYYY hh:mm A")
            let diferencia = fechafin.diff(fechainicio, 'months', true)
            
            if(fechainicio > fechafin || diferencia > TresMes) {
                document.querySelector("#errormessage").style.display = "block"
                document.getElementById("error").innerHTML = "Debe indicar un periodo de tiempo para su consulta que no supere los 3 meses";
            } else if(radicado == "" && diferencia < 0){
                document.querySelector("#errormessage").style.display = "block"
                document.querySelector("#error").innerHTML = "Debe indicar un periodo de tiempo para su consulta que no supere los 3 meses";
            }else if(radicado == "" && (fechainicio.year() === 0 || fechafin.year() === 0)){
                document.querySelector("#errormessage").style.display = "block"
                document.getElementById("error").innerHTML = "Debe indicar un número de radicado o un periodo de tiempo que no supere los 3 meses para la consulta";
            }else if(radicado == "" && diferencia > TresMes){
                document.querySelector("#errormessage").style.display = "block"
                document.getElementById("error").innerHTML = "Si no esta consultando un número de rádicado específico, debe indicar un periodo de tiempo para su consulta que no supere los 3 meses";
            }else{
                document.querySelector("#errormessage").style.display = "none"
                runReport();
            }
        }
        function runReport() {
            document.querySelector("#loadingindicator").style.display = "block"
            let fechainicio = moment(document.querySelector("#fechinicio").value, "DD/MM/YYYY hh:mm A")
            let fechafin = moment(document.querySelector("#fechfin").value, "DD/MM/YYYY hh:mm A")
            let selectoTotal=obtenerMultiselect(document.querySelector("#dependenciaTotal").id)
            let selectorUsuario=obtenerMultiselect(document.querySelector("#dependenciaUsuario").id)
            let selectMedio=document.querySelector("#medio").value
            URL = "?func=ll&objId=[LL_REPTAG_$WR_EnvInt /]"
            URL += "&objAction=RunReport&conHTML=0" 
            
            [LL_WEBREPORT_IF "[LL_REPTAG_$GRP_Gestor USERINGROUP /]" == "TRUE" /]
                URL += "&gestor=true"
            [LL_WEBREPORT_ELSE /]
                URL += "&gestor="
            [LL_WEBREPORT_ENDIF /]
            
            [LL_WEBREPORT_IF  "[LL_REPTAG_$GRP_Aprobador USERINGROUP /]" == "TRUE" && "[LL_REPTAG_$GRP_Solicitante USERINGROUP /]" == "TRUE" /]
                URL += "&aprobador="
            [LL_WEBREPORT_ELSEIF  "[LL_REPTAG_$GRP_Aprobador USERINGROUP /]" == "TRUE" /]
                URL += "&aprobador=TRUE"
            [LL_WEBREPORT_ELSE /]
                URL += "&aprobador="
            [LL_WEBREPORT_ENDIF /]
            
            URL += "&radicado=" + document.querySelector("#radicado").value
            URL += "&estado=" + document.querySelector("#estado").value
            URL += "&fechinicio=" + momentsToCSDate(fechainicio) 
            URL += "&fechfin=" + momentsToCSDate(fechafin) 
            URL += "&remitente=" + document.querySelector("#remitente_ID").value
            URL += "&dependenciaUsuario=" + selectorUsuario
            URL += "&destinatario=" + document.querySelector("#destinatario_ID").value 
            URL += "&dependenciaTotal=" + selectoTotal  
            URL += "&asunto=" + document.querySelector("#asunto").value 
            URL += "&medio=" + selectMedio 
            URL += "&nexturl=[LL_REPTAG_NEXTURL /]"
            
            console.log(URL)
            window.location = URL
        }
        
        function momentsToCSDate(mObj) {
            if (mObj._i != "") {
                let day = mObj.date()
                let month = mObj.month() + 1
                let year = mObj.year()
                let hours = mObj.hour()
                let minute = mObj.minute()
                let datepaila = "D/" + year + "/" + month + "/" + day + ":" + hours + ":" + minute + ":0"
                return datepaila
            }else{
                return ""
            }
        }
        
        function obtenerMultiselect(sel) 
        { 
            var selector=document.getElementById(sel); 
            var valores="";
            if(selector != ""){
                for (var i = 0; i < selector.options.length; i++) {
                    if(selector.options[i].selected ==true){ 
                        valores=valores+selector.options[i].value+","; 
                    }  
                }
                return valores;
            }else{
                return "";
            }
        } 
        
    </script>
