    <script>
        $(function () {
             $('.datetimepicker1').datetimepicker({
                format:'DD/MM/YYYY',
                locale: 'es'
            });
            if("[LL_REPTAG_$GRP_Admin USERINGROUP /]" == "TRUE"){
                setSelect([LL_REPTAG_$WR_CGCAdmin /], "#cgc-select")
            }else{
                setSelect([LL_REPTAG_$WR_CGCRadicador /], "#cgc-select")
            }
            
            setTimeout(() => {
                $('.select2').select2({
                    placeholder: 'Seleccione una opción...'
                });
            document.querySelector("#loadingindicator").style.display = "none"
            $(".popover_help").popover()
            }, 3000);
        });
        
        function setSelect(wrID, object) {
            let wrUrl = "?func=ll&objId=" + wrID + "&objAction=RunReport";
            // Se ejecuta el WR
            $.ajax({
                async: true,
                url: wrUrl,
                cache: false
            }).done(function (response) {
                $(object).html(response);
            })
        }
        
        function runReport() {
            document.querySelector("#loadingindicator").style.display = "block"
            let fechainicio = moment(document.querySelector("#fechinicio").value, "DD/MM/YYYY")
            let fechafin = moment(document.querySelector("#fechfin").value, "DD/MM/YYYY")
            let idplantilla = document.querySelector("#idplantilla").value
            let cgc = document.querySelector("#cgc").value
            
            URL= "?func=ll&objId=[LL_REPTAG_$WR_Planillas /]&objAction=RunReport&conHTML=0"
            URL+= "&cgc=" + cgc
            URL+= "&idplantilla=" + idplantilla
            URL+= "&fechinicio=" + momentsToCSDate(fechainicio)
            URL+= "&fechfin=" + momentsToCSDate(fechafin)
            URL+= "&nexturl=[LL_REPTAG_NEXTURL ESCAPEURL /]"
            console.log(URL)
            window.location = URL
            
        }
        
        
        function momentsToCSDate(mObj) {
            if (mObj._i != "") {
                let day = mObj.date()
                let month = mObj.month() + 1
                let year = mObj.year()
                let hours = mObj.hour()
                let minute = mObj.minute()
                let datepaila = "D/" + year + "/" + month + "/" + day + ":0" + ":0" + ":0"
                return datepaila
            }else{
                return ""
            }
        }
    </script>
